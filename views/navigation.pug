html
	head
		title= title

		link(rel="stylesheet", href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css")
		link(rel="stylesheet", href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:400,700,700italic,400italic")
		link(rel="stylesheet", href="/css/typegrid.css")
		link(rel="stylesheet", href="/css/style.css")

	body
		section#meta
			.left
				a.link-nav(href='/') Home

			.center
				- var sessionDate = new Date(navObj.date)
				- var sessionName = navObj.userName + '-' + navObj.date.substr(8, 3) + ' ' + navObj.date.substr(5, 2)
				span.session-name #{sessionName}


				a.link-url
					- var url = navObj.url
					- var trimmedUrl = (url.length > 60) ? url.substr(0, 60 - 1) + '...' : url; 
					span.url #{trimmedUrl}
				
				span.count #{navObj.screenshots.length} screenshot(s)

			.right
				if (navObj.nextTrackId != null)
					a.link-nav(href=`/navigation/` + navObj.nextTrackId) Skip &gt; 

			.clear


		section#screenshots
			.container
				.desktop-12.columns
					for screenshot in navObj.screenshots
						.screenshot-wrapper
							.duration
								.time Viewed for

								- var barWidth = Math.max(20, Math.min(Number((screenshot.duration / 1000).toFixed(0)) * 50, 500)) + 'px'
								.bar(style={
									'width': barWidth
								})
									.circle 


								- var durationText = ''	
								- if (screenshot.duration == null) durationText = 'Unknown'
								- else if (screenshot.duration > 10000) durationText = 'Longer than 10 seconds' 
								- else durationText = Number((screenshot.duration / 1000).toFixed(1)) + ' seconds'; 
								.desc #{durationText} 

							a.link-image(href=`/screenshot/` + screenshot.fileName)
								img.img-screenshot(src=`/screenshot/` + screenshot.fileName)



		section#survey
			form(action=`/navigation/` + navObj.trackId + `/irrelavant` method='POST')
				.container
					.desktop-12.columns
						input(type='hidden' name='next' value=navObj.nextTrackId)
						input.submit-irrelavant(type='submit' value='This webpage is irrelavant (e.g., checking mail, checking Facebook, etc.)')

			form(action=`/navigation/` + navObj.trackId method='POST')
				.container
					.question
						.desktop-3.columns
							h4 Question 1

						.desktop-9.columns
							p What kind of webpage is this? 

							.item
								input(type='radio' name='webapge-type' id='type1' value='search-engine')
								label(for='type1') Search Engine (e.g., Google)

							.item
								input(type='radio' name='webapge-type' id='type2' value='data-aggregator')
								label(for='type2') Data Aggregator (e.g., Yahoo Finance, Google Finance)

							.item
								input(type='radio' name='webapge-type' id='type3' value='investor-relations')
								label(for='type3') A Company's Investor Relations Page

							.item
								input(type='radio' name='webapge-type' id='type4' value='sec-filings')
								label(for='type4') Corporate Filings With The SEC (e.g., finding or reading 10-K, 10-Q, 8-K, etc.)

							.item
								input(type='radio' name='webapge-type' id='type5' value='news-article')
								label(for='type5') News Article About a Company

							.item
								input(type='radio' name='webapge-type' id='type6' value='investment-blog')
								label(for='type6') Investment Blog

							.item
								input(type='radio' name='webapge-type' id='type7' value='irrelevant')
								label(for='type7') Irrelevant (e.g., checking mail, checking Facebook, etc.)

							.item
								input(type='radio' name='webapge-type' id='type8' value='other')
								label(for='type8') Other

						.clear



					.question
						.desktop-3.columns
							h4 Question 2

						.desktop-9.columns
							p How would you characterize the research being done?
							textarea(name='characterize-research' cols='80' rows='4')

						.clear



					.question
						.desktop-3.columns
							h4 Question 3

						.desktop-9.columns
							p What company is being researched? 
							input(name='company-name' type='text')

				input(type='hidden' name='next' value=navObj.nextTrackId)
				input.submit-form(type='submit' value='Submit')